# AGRIMATE - Environment Configuration
# Copy this file to .env and update with your values

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
HOSTNAME=0.0.0.0
NODE_ENV=development

# ========================================
# MONGODB CONFIGURATION
# ========================================

# Option 1: Local MongoDB
MONGO_URL=mongodb://localhost:27017/agrimate

# Option 2: MongoDB Atlas (Cloud)
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/agrimate

# Database name
DB_NAME=agrimate

# ========================================
# API CONFIGURATION
# ========================================

# API Base URL (for frontend)
API_URL=http://localhost:3000/api

# CORS allowed origins
CORS_ORIGIN=*

# API rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# WEATHER API
# ========================================

# WeatherAPI.com free key (optional)
# Sign up at https://www.weatherapi.com
WEATHER_API_KEY=your_weather_api_key

# Weather API timeout
WEATHER_API_TIMEOUT=5000

# ========================================
# AUTHENTICATION
# ========================================

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# ========================================
# LOGGING
# ========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/app.log

# Max log file size (MB)
LOG_MAX_SIZE=10

# ========================================
# EMAIL CONFIGURATION
# ========================================

# For notifications and alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email settings
EMAIL_FROM=support@agrimate.gov.in
EMAIL_SUPPORT=support@agrimate.gov.in

# ========================================
# SMS CONFIGURATION
# ========================================

# For SMS alerts (optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=AGRIMATE

# ========================================
# STORAGE CONFIGURATION
# ========================================

# File upload settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# ========================================
# CACHE CONFIGURATION
# ========================================

# Cache TTL (Time To Live) in seconds
CACHE_TTL_PRICES=86400      # 24 hours
CACHE_TTL_WEATHER=3600      # 1 hour
CACHE_TTL_SCHEMES=604800    # 7 days
CACHE_TTL_CROPS=604800      # 7 days

# ========================================
# NOTIFICATION SETTINGS
# ========================================

# Enable price alerts
ENABLE_PRICE_ALERTS=true

# Price change threshold (%)
PRICE_ALERT_THRESHOLD=5

# Enable weather alerts
ENABLE_WEATHER_ALERTS=true

# ========================================
# SECURITY
# ========================================

# Enable HTTPS
USE_HTTPS=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Session secret
SESSION_SECRET=your_session_secret

# Password minimum length
MIN_PASSWORD_LENGTH=8

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features
ENABLE_MARKETPLACE=true
ENABLE_VOICE_ASSISTANT=true
ENABLE_DISEASE_DETECTION=true
ENABLE_PROFITABILITY_CALCULATOR=true
ENABLE_SOIL_TESTING=true

# ========================================
# ADMIN SETTINGS
# ========================================

# Admin email for notifications
ADMIN_EMAIL=admin@agrimate.gov.in

# Backup settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily  # daily, weekly, monthly

# ========================================
# ANALYTICS
# ========================================

# Google Analytics ID
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Track user behavior
ENABLE_ANALYTICS=true

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================

# Government data API
GOVT_API_URL=https://api.farmer-schemes.gov.in

# Market data provider
MARKET_DATA_API=https://api.market-data.in

# ========================================
# PERFORMANCE
# ========================================

# Database connection pool size
DB_POOL_SIZE=10

# Request timeout (ms)
REQUEST_TIMEOUT=30000

# ========================================
# MOBILE APP
# ========================================

# Firebase configuration (if using Firebase)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project

# ========================================
# DEPLOYMENT
# ========================================

# Heroku configuration
HEROKU_APP_NAME=agrimate-app

# AWS configuration
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=agrimate-uploads

# Azure configuration
AZURE_STORAGE_ACCOUNT=agrimatestorage
AZURE_STORAGE_KEY=your_storage_key

# ========================================
# DEVELOPMENT
# ========================================

# Debug mode
DEBUG=false

# Hot reload (if using nodemon)
WATCH_FILES=true

# Seed database with sample data
SEED_DATABASE=true

# ========================================
# NOTES
# ========================================

# 1. Never commit this file with real values
# 2. Use .env.example for version control
# 3. Keep sensitive keys in .gitignore
# 4. Use different values for dev/prod
# 5. Rotate keys periodically
